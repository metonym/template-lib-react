{
  "name": "template-lib-react",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Base template for React libraries",
  "author": "Eric Liu (https://github.com/metonym)",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "develop": "tsc -w",
    "build": "rm -rf lib && tsc -p tsconfig.prod.json",
    "lint": "tslint --fix -p . -c tslint.json",
    "test": "jest --coverage",
    "test:tdd": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.15",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react": "^16.x",
    "react-dom": "^16.x",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "react": "^16.x",
    "react-dom": "^16.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "preset": "ts-jest",
    "testMatch": [
      "<rootDir>src/**/*.(spec|test).{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>src/tests/setup.ts"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "resolutions": {
    "**/**/lodash": "^4.17.12",
    "**/**/mixin-deep": "^2.0.1",
    "**/**/set-value": "^3.0.1"
  }
}
